{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "esnext",
        "jsx": "react",
        "lib": [
            "dom",
            "es2015",
            "es2017"
        ],
        "pretty": true,
        "allowJs": true,
        "listFiles": true,
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "include": [
        "./src/**/*"
    ],
    "typeAcquisition": {
        "enable": true
    }
}
