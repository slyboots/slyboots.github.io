{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "Serve Site",
            "type": "shell",
            "command": "bundle exec jekyll serve",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "identifier": "serve",
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": true,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "taskName": "Build Site",
            "type": "shell",
            "command": "bundle exec jekyll build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "identifier": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        },
        {
            "taskName": "Watch Site",
            "type": "shell",
            "command": "bundle exec jekyll build --watch",
            "group": "build",
            "identifier": "watch",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "dedicated"
            }
        }
    ]
}