{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "Serve Local",
            "type": "shell",
            "command": "npm run cp_tachyons && bundle exec jekyll serve --incremental --watch",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "identifier": "serve",
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": true,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "taskName": "Build Site",
            "type": "shell",
            "command": "npm run cp_tachyons && bundle exec jekyll build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "identifier": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "taskName": "Deploy To Master",
            "type": "shell",
            "command": "git checkout master && git merge dev && git push && git checkout dev",
            "group": "none",
            "identifier": "deploy",
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": true,
                "panel": "dedicated"
            },
            "problemMatcher": []
        },
        {
            "taskName": "Clean",
            "type": "shell",
            "command": "rm -r ${workspaceRoot}/_site && rm -r ${workspaceRoot}/_sass/* && mkdir ${workspaceRoot}/_sass/scss",
            "group": "none",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}